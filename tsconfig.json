{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [
            "es6",
			"es2018.asynciterable"
		],
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noEmit": true,
		"baseUrl": "./",
		"typeRoots": ["./"],
		"types": [],
		"forceConsistentCasingInFileNames": true
    },
    "include": [
        "types/**/*.d.ts",
        "test/type/**.spec.ts",
        "test/type/**.error.ts"
    ]
}
